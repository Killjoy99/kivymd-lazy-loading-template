<CameraScreen>
    md_bg_color: root.theme_cls.backgroundColor


    Camera:
        id: camera
        pos_hint: {"center_x": 0.5, "top": 1}
        size_hint_y: 0.7

    MDFabButton:
        on_press: root.take_picture()
        icon: 'camera'
        pos_hint: {"center_x": 0.4, "bottom": .8}

    MDFabButton:
        on_press: root.switch_camera()
        icon: 'camera-switch'
        pos_hint: {"center_x": 0.6, "bottom": .8}

    MDLabel:
        id: label
        text: ''
        size_hint_y: 0.15
        halign: 'center'
